<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/title" />
        <Button
            android:id="@+id/minusButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="-" />

        <com.ordonteam.sevenwonders.view.MyInput
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/playerNumber"
            android:text="@string/playerNumber" />

        <Button
            android:id="@+id/plusButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+" />
    </LinearLayout>

    <com.ordonteam.sevenwonders.view.RowViews
        android:id="@+id/rows"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.ordonteam.sevenwonders.view.RowView
            android:id="@+id/rowLabels"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:text="@string/playerName"
            android:inputType="text"/>

        <com.ordonteam.sevenwonders.view.RowView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:text="@string/warPoints"
            android:inputType="number"/>

        <com.ordonteam.sevenwonders.view.RowView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:text="@string/moneyPoints"
            android:inputType="number"/>

        <com.ordonteam.sevenwonders.view.RowView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:text="@string/wonderPoints"
            android:inputType="number"/>

        <com.ordonteam.sevenwonders.view.RowView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:text="@string/bluePoints"
            android:inputType="number"/>

        <com.ordonteam.sevenwonders.view.RowView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:text="@string/yellowPoints"
            android:inputType="number"/>

        <com.ordonteam.sevenwonders.view.RowView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:text="@string/purplePoints"
            android:inputType="number"/>

        <com.ordonteam.sevenwonders.view.RowView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:text="@string/greenPoints"
            android:inputType="number"/>

        <com.ordonteam.sevenwonders.view.RowView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:text="@string/leaderPoints"
            android:inputType="number"/>

        <com.ordonteam.sevenwonders.view.RowView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:text="@string/sum"
            android:inputType="number"/>

    </com.ordonteam.sevenwonders.view.RowViews>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/calc" />
</LinearLayout>
